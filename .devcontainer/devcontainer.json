{
    "name": "ML Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.12",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "forwardPorts": [8888],
    "remoteUser": "vscode"
}